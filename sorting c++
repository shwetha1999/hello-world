
#include <iostream>
#include <algorithm>
using namespace std;
 bool compare(int i,int j)
    
    {
        return(i>j);
    }

int main()
{
   int data[]={ 2, 5, 4, 7, 1};
   sort(data, data+5, compare);
    
    cout<< " sorted array "<<endl;
    for( int i=0;i<5;i++)
    {
    cout<< data[i];
    }
  
    return 0;
    


output:
sorted array
75421
 
 
 
 
