#include <iostream>
using namespace std;
int input(char str[],int n)
{
    int ch,i=0;
    while((ch=getchar())!= '\n')
{
          if(i<n)
          str[i++] = ch;


}
str[i]='\0';
return i;
}
int main()
{
   char str[100];
   int n=input(str,5);
   cout<<n<<endl;
   cout<<str<<endl;
}

output:
5
hello   //only 5 letters will be printed inspite of many letters because of n=5;
