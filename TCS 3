find the nth element of the series
0 0 2 14 2 6 38 4 10 5 12 6 14 7




#include <iostream>
using namespace std;

int main()
{
    int i,a=0,b=0,n;
    cout<< "enter a num"<<endl;
    cin>> n;
    for(i=1;i<=n;i++)
    {
        if(i%2!=0)
          {
              if(i>1)
                a=a+2;
          }
          else
          {
            b=a/2;
          }

    }
    if(n%2!=0)
    {
        cout<< a<<endl;
    }
    else
    {
        cout<< b<<endl;
    }

    return 0;
}
