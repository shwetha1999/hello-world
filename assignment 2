#include<stdio.h>
#include<math.h>
int main(void)
{
	int a,even=0,odd=0,i;
	printf("enter a number\n");
	scanf("%d",&a);
	for(i=1; i<=a; i++)
	{
		if(i %2 ==0)
		even =even+i;
		else
		odd=odd+i;
		printf("sum of odd numbers is %d\n",odd);
		printf("sum of even numbers is %d\n",even);
				return 0;
	}
}

