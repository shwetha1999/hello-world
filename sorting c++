
#include <iostream>
#include <algorithm>
using namespace std;
 bool compare(int i,int j)
    
    {
        return(i>j);
    }

int main()
{
   int data[]={ 2, 5, 4, 7, 1};
   sort(data, data+5, compare);
    
    cout<< " sorted array "<<endl;
    for( int i=0;i<5;i++)
    {
    cout<< data[i];
    }
  
    return 0;
    


output:
sorted array
75421
 
 
 
 
 #include <iostream>
#include <algorithm>
using namespace std;
 bool compare(int i,int j)
    
    {
        return(i>j);
    }

int main()
{
   int data[]={ 2, 5, 4, 7, 1};
   sort(data, data+5, compare);
    
    cout<< " sorted array "<<endl;
    for( int i=0;i<5;i++)
    {
    cout<< data[i];
    }
  
    return 0;
    





#include<bits/stdc++.h>
#include <iostream>
#include <algorithm>
using namespace std;


int main()
{
   int data[]={ 2, 5, 4, 7, 1};
   int  n=sizeof(data)/sizeof(data[0]);
   cout << n << endl;
   sort(data, data+n);

    cout << " sorted array " << endl;
    for( int i=0;i<5;i++)
    {
    cout<< data[i]<< " ";
    }

    return 0;
}
