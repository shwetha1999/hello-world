#include<iostream>
#include<bits/stdc++.h>
using namespace std;
void substring(string , int );
int main()
{
  string s= "abcd";
  substring(s,s.length());
  return 0;
}

void substring(string s, int n )
{int i;
 for(i=0;i<n;i++)
     for(int len=1;len<=n-i;len++)
       {
         cout<< s.substr(i,len)<<endl;
       }
}



output:
a
ab
abc
abcd
b
bc
bcd
c
cd
d
