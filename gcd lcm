//gcd lcm
#include <stdio.h>
#include<math.h>

int main(void)
{
	int r=1,lcm=0,n=0,m=0,a,b;
	printf("enter two the number\n");
	scanf("%d %d",&a,&b);
	if(a>b)
	{
		m=a;
		n=b;
	}
	else
	{
		m=b;
		n=a;
	}	
	while(r>0)
	{
	r=m%n;
	m=n;
	n=r;
	}
	
//	lcm=(a*b)/n;
		printf("the lcm of a number is %d\n",lcm);
		printf("the gcd of a number is %d\n",n);
		return 0;
}
