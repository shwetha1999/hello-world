#include <stdio.h>

int main(void)
{
	int i,j;
	char c=65;
for(i=0;i<5;i++)
{
	for(j=0;(i+j)<5;j++)
{
	printf("%c\t",c);
	c++;
}
	

printf("\n");
c=65;
	
}
return 0;
}


A	B	C	D	E	
A	B	C	D	
A	B	C	
A	B	
A	






#include<stdio.h>
#include<stdlib.h>
int main()
{
    int i,j,n,num;
    printf("enter a num");
    scanf("%d",&n);
    num=n;
    for(i=0;i<n;i++)
    {
        for(j=0;j<num;j++)
        {
            printf(" * ");
        }
        num--;
        printf("\n");
    }
    return 0;
}


output:
enter a num 5
* * * * *
* * * *
* * *
* *
*
