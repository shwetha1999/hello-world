#include<stdio.h>
#include<math.h>
int main(void)
{
	int digit,even=0,odd=0,rem,n;
	printf("enter a number\n");
	scanf("%d",&n);
	while(n>0)
    {
        digit=n%10;
        n=n/10;
        rem=digit%2;
        if(rem==0)
        even=even+digit;
        else
        odd=odd+digit;

    }
		printf("sum of odd numbers is %d\n",odd);
		printf("sum of even numbers is %d\n",even);
				return 0;
		}

