#include <iostream>
#include<stdio.h>
using namespace std;

int main()                 //Program to find the length of string
{
    int c=0;
   char s[20];
   char *p;
   gets(s);
   p=s;
   while(*p!='\0')
   {
       c++;
       p++;

   }
   cout<< c<<endl;
}

 Output:
 helloworld
 10





#include <iostream>
#include<stdio.h>
using namespace std;
int main()                    //program to cpmare two strings
{
  int flag=0;
  char s1[20],s2[20];
  char *p1,*p2;
  gets(s1);
  gets(s2);
  p1=s1;
  p2=s2;
while(*p1 != '\0'|| *p2!='\0')
{
      if(*p1 != *p2)
      {
        flag=1;
        break;
      }
        p1++;
    p2++;
}

    if(flag==1)
        cout<<"strings are not equal"<<endl;
    else
        cout<<"string are equal"<<endl;
    return 0;
}




#include <iostream>
#include<stdio.h>
using namespace std;
int main()
{
  int flag=0;
  char s1[20],s2[20];    //copy one string to another
  char *p1,*p2;
  gets(s1);

  p1=s1;
  p2=s2;
while(*p1 != '\0')
{
  *p2 = *p1;
  p1++;
  p2++;


}
puts(s2);
}







#include <iostream>
using namespace std;
int main()
{
char s1[20],s2[20];
char *p1, *p2;
gets(s1);
gets(s2);
p1=s1;
p2=s2;
while(*p1!='\0')
{
    p1++;
}

while(*p2 !='\0')
{
*p1=*p2;
p1++;
p2++;
}
*p1='\0';
puts(s1);
}

output:
hello
world
helloworld



