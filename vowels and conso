#include <stdio.h>

int main(void) 
{
	char a[20];
	int i, v=0,c=0;
	printf("enter a string\n");
	scanf("%s",a);
	if(a[i]=='a'a||[i]=='e'||a[i]=='i'||a[i]=='o'||a[i]=='u'||a[i]=='A'||a[i]=='E'||a[i]=='I'||a[i]=='O'||a[i]=='U')
	{
		v++;
	}
	else
	{
		c++;
	}
	printf("the numbers of vovels are %d",v);
	printf("the numbers of consonents are %d",c);
	return 0;
}


