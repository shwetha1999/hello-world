#include <stdio.h>
#include <stdlib.h>

int main()
{
    char x=1, y=2;
    if(x&y)//0001&0010
        printf("Result of x&y is 1");
    if(x&&y)  //true&& true
        printf("Result of x&&y is 1");

    return 0;
}

o/p
Result of x&&y is 1



#include <stdio.h>
#include <stdlib.h>

int main()
{
    char x=3;
    printf("%d\n",x<<1);   // equal to [3*2^1]    {if shifted by 4 o/p is 48 = [3*2^4]}
    printf("%d\n",x>>1);   // equal to [3/2^1]    
    return 0;
}

o/p:
6
1
