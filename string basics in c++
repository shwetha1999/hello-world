string lenght in c++


#include<iostream>
#include<string>
using namespace std;
int main()
{
    string s1("shwetha"),s2;// string is like data type
    s2.assign(s1);
    cout<< s1.length()<<endl;
    
 output:
 7
    
    
    
 #include<iostream>
#include<string>
using namespace std;
int main()
{
    string s1;
    cout<< " enter a string "<<endl;
    cin>> s1;// can gets string upto first space
    cout << "good morning from " <<s1;
}
input : shwetha devang
output:
 good morning from shwetha


to get full string


#include<iostream>
#include<string>
using namespace std;
int main()
{
    string s1;
    cout<< " enter a string "<<endl;
    getline(cin,s1);//to get full string
    cout << "good morning from " <<s1;
}



}
input : shwetha devang
output:
 good morning from shwetha devang



swapping two strings

#include<iostream>
#include<string>
using namespace std;
int main()
{
    string s1,s2;
   s1="apple ";
   s2="oranges ";
   cout << s1  <<s2  <<endl;
   s1.swap(s2);
    cout << s1  <<s2  <<endl;
}

 apple oranges
 oranges apple
 





finding position of sub string  (we can only find first substring)
 #include<iostream>
#include<string>
using namespace std;
int main()
{
    string s1("I love infinity war");
    cout<< s1<<endl;
    cout<< s1.find("in")<<endl;
}
output:
I love infinity war
7





#include<iostream>
#include<string>
using namespace std;
int main()
{
    string s1("I love infinity war");
    cout<< s1<<endl;
    cout<< s1.replace(7,2,"un")<<endl;


output:
I love infinity war
I love unfinity war






printing sub string
#include<iostream>
#include<string>
using namespace std;
int main()
{
    string s1("I love infinity war");
    cout<< s1<<endl;
    cout<< s1.substr(7,8)<<endl;
}
output:
I love infinity war
infinity




errase a sstring
#include<iostream>
#include<string>
using namespace std;
int main()
{
    string s1("I love infinity war");
    cout<< s1<<endl;
    cout<< s1.erase(15)<<endl;
}
output:
output:
I love infinity war
I love infinity




insert fun
#include<iostream>
#include<string>
using namespace std;
int main()
{
    string s1("I love infinity war");
    cout<< s1<<endl;
    s1.insert(6, " Indian ");
    cout<< s1<<endl;
}

output:

I love infinity war
I love Indian infinity war





concatenation

#include<iostream>
#include<string>
using namespace std;
int main()
{
    string s1,s2,s3;
    cout<<" enter the first string "<< endl;
    getline(cin,s1);
    cout<<" enter the second string "<< endl;
    getline(cin,s2);
    cout<<" enter the third string string "<< endl;
    getline(cin,s3);
    cout<< " the concatenated string is "<< s1+s2+s3 <<endl;


}
input
shwetha 
h 
devang
 shwetha h devang
