print the nth element of pattern
0 0 7 6 14 12 21 18 28 24

#include <iostream>
using namespace std;

int main()
{
    int i,a=0,b=0,n;
    cout<< "enter a num"<<endl;
    cin>> n;
    for(i=1;i<=n;i++)
    {

        if(i%2!=0)
          {
               if(i>1)
                a=a+7;
          }
          else
            if(i>2)
          {
            b=b+6;
          }

    }
    if(n%2!=0)
    {
        cout<< a<<endl;
    }
    else
    {
        cout<< b<<endl;
    }

    return 0;
}
