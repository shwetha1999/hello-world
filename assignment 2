#include<stdio.h>
#include<math.h>
int main(void)
{
	int a,even=0,odd=0,i;
	printf("enter a number\n");
	scanf("%d",&a);
	for(i=1; i<=a; i++)
	{
		if(i %2 ==0)
		even =even+i;
		else
		odd=odd+i; 
				}
		printf("sum of odd numbers is %d\n",odd);
		printf("sum of even numbers is %d\n",even);
				return 0;
	}

input:5
  o/p :enter a value of a
sum of even numbers is 6
sum of odd numbers is 9





#include <stdio.h>

int main(void)
{
	int rev=0,n,rem;
	printf("enter the number\n");
	scanf("%d",&n);
	while(n > 0)
	{
		rem=n%10;
		rev=rev*10+rem;
		n=n/10;
		
	}
	printf("the reverse of num is %d",rev);
	return 0;
}

enter the number 123
the reverse of num is 321




#include <stdio.h>

int main(void)
{
	int n,days=0,months=0;
	printf("enter the number\n");
	scanf("%d",&n);
	days=n%30;
	months=n/30;
	printf("month=%d\n",months);
	
	printf("days =%d\n",days);
	return 0;
}


enter the number 100
month=3
days =10





//swapping elemnts with using third variable
#include <stdio.h>

int main(void)
{
	int a,b,temp;
	printf("enter two number\n");
	scanf("%d %d",&a,&b);
    temp=a;
    a=b;
    b=temp;
	printf("the swapped numbers are %d %d",a,b);
	return 0;
}

enter two number 2 3
the swapped numbers are 3 2
