A	B	
A	B	C	
A	B	C	D	
A	B	C	D	E	








#include <stdio.h>

int main()
{
   int i,j,c=65;
   for(i=0;i<=4;i++)
   {
       for(j=0;j<=i;j++)
       {
           if(i==2)
       continue;
       
       printf("   %c  ",c);
       c++;
       
   }
       printf("\n");
      c=65;
       
   }

    return 0;
}

