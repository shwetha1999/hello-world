#include <stdio.h>

int main(void)
{
	int i,j;
	char c=65;
for(i=0;i<5;i++)
{
	for(j=0;i>=j;j++)
{
	printf("%c\t",c);
	c++;
}
	

printf("\n");
c=65;
	
}
return 0;
}


